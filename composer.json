{
    "name": "accard/accard",
    "license": "MIT",
    "type": "project",
    "description": "The Accard Framework",
    "autoload": {
        "psr-0": { "": "src/", "SymfonyStandard": "app/" }
    },
    "require": {
        "php":                                   ">=5.3.3",
        "symfony/symfony":                       "2.5.*",
        "symfony/assetic-bundle":                "~2.3",
        "symfony/swiftmailer-bundle":            "~2.3",
        "symfony/monolog-bundle":                "~2.4",
        "symfony/expression-language":           "~2.4",
        "symfony/intl":                          "~2.3",
        "sensio/distribution-bundle":            "~3.0",
        "sensio/framework-extra-bundle":         "~3.0",
        "doctrine/orm":                          "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle":              "~1.3@dev",
        "doctrine/doctrine-cache-bundle":        "~1.0",
        "twig/extensions":                       "~1.0",
        "incenteev/composer-parameter-handler":  "~2.0",
        "friendsofsymfony/rest-bundle":          "~1.0",
        "jms/serializer-bundle":                 "0.12.*",
        "pagerfanta/pagerfanta":                 "1.0.*@dev",
        "white-october/pagerfanta-bundle":       "1.0.*@dev",
        "knplabs/knp-menu":                      "2.0.*@dev",
        "knplabs/knp-menu-bundle":               "2.0.*@dev",
        "mopa/bootstrap-bundle":                 "dev-master@dev",
        "twbs/bootstrap":                        "v3.0.0"
    },
    "require-dev": {
        "sensio/generator-bundle":               "~2.3"
    },
    "replace":{
        "accard/activity":                       "self.version",
        "accard/attribute":                      "self.version",
        "accard/behavior":                       "self.version",
        "accard/core":                           "self.version",
        "accard/core-bundle":                    "self.version",
        "accard/diagnosis":                      "self.version",
        "accard/diagnosis-bundle":               "self.version",
        "accard/field":                          "self.version",
        "accard/fixtures-bundle":                "self.version",
        "accard/import-bundle":                  "self.version",
        "accard/patient":                        "self.version",
        "accard/patient-bundle":                 "self.version",
        "accard/phase":                          "self.version",
        "accard/phase-bundle":                   "self.version",
        "accard/regimen":                        "self.version",
        "accard/resource":                       "self.version",
        "accard/resource-bundle":                "self.version",
        "accard/sample":                         "self.version",
        "accard/web-bundle":                     "self.version"
    },
    "scripts": {
        "post-root-package-install": [
            "SymfonyStandard\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "2.5-dev"
        }
    }
}
