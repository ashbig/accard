{% macro list_fields(fields) %}

{% from 'AccardWebBundle:Common/Macros:alerts.html.twig' import info %}
{% from 'AccardWebBundle:Common/Macros:buttons.html.twig' import edit, delete %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import label %}

{% if fields|length > 0 %}
    <table class="table table-bordered">
        <tbody>
        {% for fields in fields %}
            <tr id="{{ fields.id }}">
                <td>{{ fields.presentation }}</td>
                <td>{{ fields.name }}</td>
                <td>{{ label(fields.type) }}</td>
                <td>
                    <div class="pull-right">
                        {{ edit(path('accard_backend_behavior_field_update', {'id': fields.id}), null, 'xs') }}
                        {{ delete(path('accard_backend_behavior_field_delete', {'id': fields.id}), null, 'xs') }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ info('accard.behavior.field.none_found'|trans) }}
{% endif %}

{% endmacro %}