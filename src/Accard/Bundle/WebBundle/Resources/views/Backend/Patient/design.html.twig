{% extends 'AccardWebBundle:Backend:layout.html.twig' %}

{% from 'AccardWebBundle:Common/Macros:buttons.html.twig' import button, create, generic %}
{% from 'AccardWebBundle:Common/Macros:actions.html.twig' import update %}
{% from 'AccardWebBundle:Common/Macros:misc.html.twig' import pagination, page_title, statistics %}
{% from 'AccardWebBundle:Backend/Patient:macros.html.twig' import list_fields %}


{% block content %}
    {{ page_title(
        'accard.interface.backend.titles.design_patient'|trans,
        [
            generic(path('accard_frontend_patient_index'), 'accard.form.patient.manage'|trans, 'user'),
            create(path('accard_frontend_patient_create'), 'accard.form.patient.create'|trans)
        ]
    ) }}

    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <div class="pull-right">
                            {{ create(path('accard_backend_patient_field_create'), 'accard.form.field.create'|trans, 'xs') }}
                        </div>
                        {{ 'accard.form.patient.fields'|trans }}
                    </h4>
                </div>
                {{ list_fields(fields) }}
                {% if fields.haveToPaginate() %}
                <div class="panel-body">
                    {{ pagination(fields) }}
                </div>
                {% endif %}
            </div>
        </div>
        <div class="col-md-4">
            {{ button(path('accard_backend_option_update_redirect', { name: 'gender' }), 'accard.form.patient.update_gender'|trans, 'block') }}
            {{ button(path('accard_backend_option_update_redirect', { name: 'race' }), 'accard.form.patient.update_race'|trans, 'block') }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <form action="{{ path('accard_backend_patient_settings_update') }}" method="POST" enctype="{{ form_enctype(settings_form) }}" novalidate>
                {{ form_widget(settings_form._token) }}
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary btn-xs">{{ 'accard.update'|trans }}</button>
                            </div>
                            {{- 'accard.settings'|trans -}}
                        </h4>
                    </div>
                    <div class="panel-body">
                        {{ form_widget(settings_form.enabled) }}
                        {{ form_widget(settings_form.import_enabled) }}
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            {{ statistics([
                'accard.form.patient.count'|trans({'%total%': patient_count}),
                'accard.form.patient.field_count'|trans({'%total%': fields|length})
            ]) }}
        </div>
    </div>
{% endblock %}