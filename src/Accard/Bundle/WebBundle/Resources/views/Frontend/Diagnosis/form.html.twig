{% set count = form.fields|length %}
{% set row1fields = form.fields|slice(0, count/2) %}
{% set row2fields = form.fields|slice(count/2, count) %}

<div class="col-lg-3">
    <h3>Select a Patient</h3>
    <p>Select the patient to apply the diagnosis to.</p>
</div>
<div class = 'col-lg-9'>
    <div class = 'well'>
        <div class="form-group{% if form.patient.vars.errors|length %} has-error{% endif %}">
            {{ form_widget(form.patient, {
                widget_addon_append: { text: 'accard.form.patient.name'|trans },
                attr: {
                    placeholder: 'accard.form.patient.name'|trans 
                }
            }) }}
            {% if form.patient.vars.errors|length %}
                {{ form_errors(form.patient) }}
            {% endif %}
        </div>
    </div>
</div>
<hr>
<div class="col-lg-3">
    <h3>Create Diagnosis</h3>
    <p>Create the diagnosis for the selected patient.</p>
</div>
<div class="col-lg-9">
    <div class="well">

            {{form_row(form.startDate)}}
            
            {{form_row(form.endDate)}}

    </div>
</div>

{% macro render_field(field) %}
    {{ form_widget(field) }}
{% endmacro %}

{% from _self import render_field %}

<div class="row">
    <div class="col-md-6">
    {% for field in row1fields %}
        {{ render_field(field) }}
    {% endfor %}
    </div>
    <div class="col-md-6">
    {% for field in row2fields %}
        {{ render_field(field) }}
    {% endfor %}
    </div>
</div>
