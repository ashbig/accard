<div class="well">
	<div class="row">
		<div class="col-md-4">
			<strong>MRN : </strong>
		</div>
		<div class="col-md-8">
			{{patient.mrn}}
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<strong>Name : </strong>
		</div>
		<div class="col-md-8">
			{{patient.firstName}} {{patient.lastName}}
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<strong>Date of Birth : </strong>
		</div>
		<div class="col-md-8">
			{{patient.dateOfBirth|date('m-d-Y')}}
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<strong>Gender : </strong>
		</div>
		<div class="col-md-8">
			{{patient.gender}}
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<strong>Race :</strong>
		</div>
		<div class="col-md-8">
			{{patient.race}}
		</div>
	</div>
</div>