

<div class="col-lg-3">
    <h3>Select a Patient</h3>
    <p>Select the patient to apply the attribute to.</p>
</div>
<div class = 'col-lg-9'>
    <div class = 'well'>
        <div class="form-group{% if form.patient.vars.errors|length %} has-error{% endif %}">
            {{ form_widget(form.patient, {
                widget_addon_append: { text: 'accard.form.patient.name'|trans },
                attr: {
                    placeholder: 'accard.form.patient.name'|trans 
                }
            }) }}
            {% if form.patient.vars.errors|length %}
                {{ form_errors(form.patient) }}
            {% endif %}
        </div>
    </div>
</div>
<hr>
<div class="col-lg-3">
    <h3>Create Attribute</h3>
    <p>Create the attribute for the selected patient.</p>
</div>
<div class="col-lg-9">
    <div class="well">

            {% block sub_attribute_form_fields %}
            {% endblock %}

    </div>
</div>
